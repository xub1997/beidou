<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

	<context id="DB2Tables" targetRuntime="MyBatis3">
		<commentGenerator>
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		<!-- 配置数据库连接 -->
		<jdbcConnection
			driverClass="com.mysql.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3307/syslog"
			userId="root"
			password="root">
		</jdbcConnection>
		<!-- mybatis里专门用来处理NUMERIC和DECIMAL类型的策略 -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="true" />
		</javaTypeResolver>

		<!-- 指定javaBean生成的位置 -->
		<javaModelGenerator targetPackage="com.beidou.logger.entity"
			targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
			<property name="trimStrings" value="true" />
		</javaModelGenerator>

		<!--指定sql映射文件生成的位置 -->
		<sqlMapGenerator targetPackage="mapper" targetProject=".\src\main\resources">
			<property name="enableSubPackages" value="true" />
		</sqlMapGenerator>

		<!-- 指定dao接口生成的位置，mapper接口 -->
		<javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.beidou.logger.dao" targetProject=".\src\main\java">
			<property name="enableSubPackages" value="true" />
		</javaClientGenerator>


		<!-- table指定每个表的生成策略 -->
		<!--<table tableName="tb_user" domainObjectName="User"></table>
		<table tableName="tb_rule" domainObjectName="Rule"></table>-->
		<!-- <table tableName="tb_timeLine" domainObjectName="TimeLine"></table>
		<table tableName="tb_category" domainObjectName="Category"></table> 
		<table tableName="tb_message" domainObjectName="Message"></table>
		<table tableName="tb_article" domainObjectName="Article"></table> -->
		<table tableName="tb_syslog" domainObjectName="SysLog"></table>
	</context>
</generatorConfiguration>